extends ../main.pug

block content
    .upload-video__container
        .upload-video__preview
            video#preview-video
            button#action-btn.upload-video__btn Ready Recording
        form(method="post", enctype="multipart/form-data")
            label(for="videoFile") Video File
            input#videoFile(
                type="file",
                name="videoFile",
                accept="video/*",
                required
            )
            label(for="thumbnailFile") Thumbnail File
            input#thumbnailFile(
                type="file",
                name="thumbnailFile",
                accept="image/*",
                required
            )
            input(
                type="text",
                placeholder="Title",
                name="title",
                maxlength="80",
                required
            )
            input(
                type="text",
                placeholder="Description",
                name="description",
                minlength="20",
                maxlength="140"
            )
            input(
                type="text",
                placeholder="Hashtags, separated by comma.",
                name="hashtags"
            )
            input(value="Upload Video", type="submit")

block scripts
    script(src="/static/js/recorder.js")
