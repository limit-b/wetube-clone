include ../mixins/avatar-mixin.pug

<header>
    a.header__logo(href="/")
        i.fab.fa-youtube
    nav.header__nav
        ul
            li
                a(href="/search")
                    i.fas.fa-search.header__search-font
            if loggedIn
                li
                    a(href="/videos/upload") Upload Video
                li
                    a(href="/users/edit") Edit User
                li
                    a(href="/users/logout") Logout
                li
                    a(href=`/users/${loggedInUser._id}`)
                        +avatarMixin(loggedInUser.avatarUrl, "header")
            else
                li
                    a(href="/login") Login
                li
                    a.header__button(href="/join") Join
</header>
