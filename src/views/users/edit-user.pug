extends ../main.pug

block content
    if errorMessage
        span= errorMessage
    form(method="post", enctype="multipart/form-data")
        label(for="avatar") Avatar
        //- img(src=`/${loggedInUser.avatarUrl}`, width="100")
        input#avatar(type="file", name="avatar", accept="image/*")
        input(
            value=loggedInUser.userName,
            type="text",
            placeholder="Name",
            name="userName",
            required
        )
        input(
            value=loggedInUser.email,
            type="email",
            placeholder="Email",
            name="email",
            required
        )
        input(
            value=loggedInUser.userID,
            type="text",
            placeholder="ID",
            name="userID",
            required
        )
        input(
            value=loggedInUser.country,
            type="text",
            placeholder="Country",
            name="country",
            required
        )
        input(value="Update", type="submit")
        if !loggedInUser.socialLoginOnly
            .edit-user__password
                a(href="change-password") Change Password &rarr;
