mixin videoMixin(itemData)
    a.video-mixin(href=`/videos/${itemData.id}`)
        .video-mixin__thumb
        //- each hashtag in itemData.hashtags
        //-     span= hashtag
        .video-mixin__info
            span.video-mixin__title= itemData.title
            .video-mixin__meta
                span #{ itemData.owner.userName }&nbsp;•&nbsp;
                span #{ itemData.meta.views }회
