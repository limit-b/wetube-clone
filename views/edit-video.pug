extends layouts/main

block content
    .form-container
        form(action=routes.videos+routes.editVideo, method="post")
            input(type="text", name="video-title", placeholder="Title")
            textarea(name="video-description", placeholder="Description")
            input(type="submit", value="Update Video")
        a.form-container__link.form-container__link--delete(href=routes.videos+routes.deleteVideo) Delete Video